<div class="nested-fields">
  <div class="field">
    <%= f.label :name, "トレーニングを選択", class: "form-label" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>
  <div class="field">
    <%= f.label :weight, "負荷を選択", class: "form-label" %>
    <%= f.number_field :weight, class: "form-input" %>  kg or km/h（ジョギングの場合は速さ）
  </div>
  <div class="field">
    <%= f.label :reps, "回数/距離", class: "form-label" %>
    <%= f.number_field :reps, class: "form-input" %>  回 or km（ジョギングの場合は距離）
  </div>
  <div class="field">
    <%= f.label :sets, "セット数を選択", class: "form-label" %>
    <%= f.number_field :sets, class: "form-input" %>  セット
  </div>
  <div class="field">
    <%= f.label :duration, "所要時間", class: "form-label" %>
    <%= f.number_field :duration, class: "form-input" %>  分
  </div>
